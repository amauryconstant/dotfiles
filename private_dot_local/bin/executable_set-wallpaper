#!/usr/bin/env bash

# Set Wallpaper - Direct CLI Access
# Purpose: Set specific wallpaper
# Requirements: Arch Linux, wallpaper management tools

# Use environment variables defined in shell/env
SET_WALLPAPER_SCRIPT="$SCRIPTS_DIR/media/set-wallpaper.sh"

# Execute set wallpaper script
if [ -f "$SET_WALLPAPER_SCRIPT" ]; then
    "$SET_WALLPAPER_SCRIPT" "$@"
else
    echo "Error: Set wallpaper script not found at $SET_WALLPAPER_SCRIPT" >&2
    exit 1
fi