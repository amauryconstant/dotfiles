#!/usr/bin/env bash

# Dotfiles Hook List - Direct CLI Access
# Purpose: List available hook points and installed user hooks
# Requirements: Arch Linux, gum

# Use environment variables defined in shell/env
HOOK_SCRIPT="$SCRIPTS_DIR/user-interface/hook-list.sh"

# Execute hook list script
if [ -f "$HOOK_SCRIPT" ]; then
    "$HOOK_SCRIPT" "$@"
else
    echo "Error: Hook list script not found at $HOOK_SCRIPT" >&2
    exit 1
fi
