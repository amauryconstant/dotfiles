#!/usr/bin/env bash

# System Health Dashboard - Direct CLI Access
# Purpose: Comprehensive system status overview with interactive UI
# Requirements: Arch Linux, gum (UI library), glances, inxi, lm_sensors, pacman-contrib

# Use environment variables defined in shell/env
HEALTH_SCRIPT="$SCRIPTS_DIR/system/system-health-dashboard.sh"

# system-health-dashboard.sh is self-contained, includes UI library

# Execute system health script
if [ -f "$HEALTH_SCRIPT" ]; then
    "$HEALTH_SCRIPT" "$@"
else
    echo "Error: System health script not found at $HEALTH_SCRIPT" >&2
    exit 1
fi