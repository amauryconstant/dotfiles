#!/usr/bin/env bash

# Tailscale VPN - Direct CLI Access
# Purpose: Tailscale VPN management
# Requirements: Arch Linux, tailscale

# Use environment variables defined in shell/env
TAILSCALE_SCRIPT="$SCRIPTS_DIR/network/tailscale.sh"

# Execute tailscale script
if [ -f "$TAILSCALE_SCRIPT" ]; then
    "$TAILSCALE_SCRIPT" "$@"
else
    echo "Error: Tailscale script not found at $TAILSCALE_SCRIPT" >&2
    exit 1
fi