#!/usr/bin/env bash

# Dotfiles Hook Create - Direct CLI Access
# Purpose: Create hook template with documentation
# Requirements: Arch Linux, gum

# Use environment variables defined in shell/env
HOOK_SCRIPT="$SCRIPTS_DIR/user-interface/hook-create.sh"

# Execute hook create script
if [ -f "$HOOK_SCRIPT" ]; then
    "$HOOK_SCRIPT" "$@"
else
    echo "Error: Hook create script not found at $HOOK_SCRIPT" >&2
    exit 1
fi
