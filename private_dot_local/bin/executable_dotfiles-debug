#!/usr/bin/env bash

# Dotfiles Debug - Direct CLI Access
# Purpose: Generate comprehensive system debug report
# Requirements: Arch Linux, inxi, gum (optional)

# Use environment variables defined in shell/env
DEBUG_SCRIPT="$SCRIPTS_DIR/utils/dotfiles-debug.sh"

# Execute debug script
if [ -f "$DEBUG_SCRIPT" ]; then
    "$DEBUG_SCRIPT" "$@"
else
    echo "Error: Dotfiles debug script not found at $DEBUG_SCRIPT" >&2
    exit 1
fi
