#!/bin/sh

# Script: run_once_before_004_create_necessary_directories.sh.tmpl
# Purpose: Create necessary directories for the system
# Requirements: Linux

{{ if eq .chezmoi.os "linux" }}
    
    echo "Creating necessary directories..."
    
    # Create XDG directories
    mkdir -p "$HOME/.cache"
    mkdir -p "$HOME/.config"
    mkdir -p "$HOME/.local/share"
    mkdir -p "$HOME/.local/state"
    mkdir -p "$HOME/.local/bin"
    
    # Create user directories
    mkdir -p "$HOME/Documents"
    mkdir -p "$HOME/Downloads"
    mkdir -p "$HOME/Pictures"
    mkdir -p "$HOME/Videos"
    mkdir -p "$HOME/Music"
    mkdir -p "$HOME/Desktop"
    mkdir -p "$HOME/Templates"
    mkdir -p "$HOME/Public"
    
    # Create development directories
    mkdir -p "$HOME/Projects"
    mkdir -p "$HOME/Workspace"
    
    # Create chezmoi-specific directories
    mkdir -p "$HOME/.config/environment.d"
    mkdir -p "$HOME/.local/state/chezmoi"
    
    echo "âœ“ Necessary directories created successfully"
    
{{ else }}
    echo "ERROR: Unsupported OS: {{ .chezmoi.os }}"
    echo "This script requires: linux"
    exit 1
{{ end }}
