#!/bin/sh

{{ if eq .osId "linux-arch" }}

    # Install zsh and ghostty terminal with starship
    yay -S --noconfirm ghostty zsh zsh-antidote starship

    # Change shell to zsh
    chsh -s $(which zsh)

{{ else }}
    echo "ERROR: This script is only supported on Arch Linux systems"
    echo "Required: osId 'linux-arch'"
    echo "Detected: '{{ .osId }}'"
    echo "Script: $(basename "$0")"
    exit 1
{{ end }}
