/* ============================================================================
 * wlogout Styling
 * ============================================================================
 * Power menu styling using oksolar color scheme
 * ============================================================================ */

* {
    background-image: none;
    box-shadow: none;
}

window {
    background-color: rgba(0, 45, 56, 0.95); /* oksolar base03 with transparency */
}

button {
    color: #fbf7ef; /* oksolar base3 */
    background-color: #093946; /* oksolar base02 */
    border-style: solid;
    border-width: 2px;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 25%;
    border-radius: 10px;
    margin: 20px;
    transition: all 200ms ease-in-out;
}

button:focus, button:active, button:hover {
    background-color: #2b90d8; /* oksolar blue */
    color: #fbf7ef; /* oksolar base3 */
    outline-style: none;
    border-color: #819500; /* oksolar green */
}

#lock {
    border-color: #ac8300; /* oksolar yellow */
}

#lock:focus, #lock:active, #lock:hover {
    border-color: #ac8300; /* oksolar yellow */
}

#logout {
    border-color: #d56500; /* oksolar orange */
}

#logout:focus, #logout:active, #logout:hover {
    border-color: #d56500; /* oksolar orange */
}

#suspend {
    border-color: #7d80d1; /* oksolar violet */
}

#suspend:focus, #suspend:active, #suspend:hover {
    border-color: #7d80d1; /* oksolar violet */
}

#reboot {
    border-color: #259d94; /* oksolar cyan */
}

#reboot:focus, #reboot:active, #reboot:hover {
    border-color: #259d94; /* oksolar cyan */
}

#shutdown {
    border-color: #f23749; /* oksolar red */
}

#shutdown:focus, #shutdown:active, #shutdown:hover {
    border-color: #f23749; /* oksolar red */
}
