/* ========================================================================== */
/* Wlogout Stylesheet - Theme System */
/* ========================================================================== */

/* Import current theme colors */
@import "../themes/current/wlogout.css";

/*
 * Custom CSS for Wlogout power menu with dynamic theme support.
 * Colors are imported from the active theme.
 */

* {
    background-image: none;
    background-color: @bg-primary;
    color: @fg-primary;
    border: none;
    border-radius: 0;
    box-shadow: none;
    font-family: "Noto Sans";
}

button {
    background-color: @bg-secondary;
    color: @fg-primary;
    border: 2px solid @bg-tertiary;
    margin: 10px;
    transition: box-shadow 0.2s ease-in-out;
}

button:hover {
    background-color: @accent-primary;
    color: @fg-contrast;
    border-color: @accent-secondary;
}

button:focus {
    background-color: @accent-highlight;
    color: @fg-contrast;
    border-color: @accent-primary;
}

#lock {
    background-color: @accent-primary;
    color: @fg-contrast;
}

#logout {
    background-color: @accent-highlight;
    color: @fg-contrast;
}

#suspend {
    background-color: @accent-warning;
    color: @fg-contrast;
}

#hibernate {
    background-color: @bg-tertiary;
    color: @fg-primary;
}

#reboot {
    background-color: @accent-success;
    color: @fg-contrast;
}

#shutdown {
    background-color: @accent-error;
    color: @fg-contrast;
}
