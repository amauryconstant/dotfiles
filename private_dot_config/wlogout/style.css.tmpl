/* ============================================================================
 * wlogout Styling
 * ============================================================================
 * Power menu styling using oksolar color scheme
 * ============================================================================ */

* {
    background-image: none;
    box-shadow: none;
}

window {
    background-color: rgba(0, 45, 56, 0.80);
}

button {
    color: #{{ .colors.oksolar.base2 }};
    background-color: #{{ .colors.oksolar.base03 }};
    border-style: solid;
    border-width: 2px;
    text-shadow: none;
}

button:focus, button:active, button:hover {
    background-color: #{{ .colors.oksolar.base02 }};
}

#lock {
    border-color: #{{ .colors.oksolar.yellow }};
}

#lock:focus, #lock:active, #lock:hover {
    color: #{{ .colors.oksolar.yellow }};
}

#logout {
    border-color: #{{ .colors.oksolar.orange }};
}

#logout:focus, #logout:active, #logout:hover {
    color: #{{ .colors.oksolar.orange }};
}

#suspend {
    border-color: #{{ .colors.oksolar.violet }};
}

#suspend:focus, #suspend:active, #suspend:hover {
    color: #{{ .colors.oksolar.violet }};
}

#reboot {
    border-color: #{{ .colors.oksolar.cyan }};
}

#reboot:focus, #reboot:active, #reboot:hover {
    color: #{{ .colors.oksolar.cyan }};
}

#shutdown {
    border-color: #{{ .colors.oksolar.red }};
}

#shutdown:focus, #shutdown:active, #shutdown:hover {
    color: #{{ .colors.oksolar.red }};
}
