# ============================================================================
# hypridle Configuration
# ============================================================================
# Official Hyprland idle management daemon
# Documentation: https://wiki.hyprland.org/Hypr-Ecosystem/hypridle/
#
# This configuration uses chassis detection to optimize behavior for
# laptops vs. desktops (suspend timeout only for laptops).
# ============================================================================

general {
    lock_cmd = pidof hyprlock || hyprlock       # Lock screen command (avoid redundant locks)
    before_sleep_cmd = loginctl lock-session    # Lock before suspend
    after_sleep_cmd = hyprctl dispatch dpms on  # Turn on display after resume
}

# Listener 1: Lock screen after 5 minutes of inactivity
listener {
    timeout = 300                                # 5 minutes
    on-timeout = loginctl lock-session; ~/.local/lib/scripts/core/hook-runner idle-change timeout
    on-resume = ~/.local/lib/scripts/core/hook-runner idle-change resume
}

# Listener 2: Turn off displays after 10 minutes of inactivity
listener {
    timeout = 600                                # 10 minutes
    on-timeout = hyprctl dispatch dpms off       # Turn off displays
    on-resume = hyprctl dispatch dpms on         # Turn on displays on activity
}

{{- if eq .chassisType "laptop" }}
# Listener 3: Suspend system after 15 minutes (laptop only)
# Desktop systems don't suspend automatically to avoid interrupting long-running tasks
listener {
    timeout = 900                                # 15 minutes
    on-timeout = systemctl suspend               # Suspend the system
}
{{- end }}
