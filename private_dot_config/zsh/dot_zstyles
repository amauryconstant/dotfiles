#!/usr/bin/env zsh
#
# .zstyles - Set zstyle settings for plugins that need them.
#

zstyle ':antidote:bundle' use-friendly-names 'yes'

zstyle ':omz:plugins:extract' lazy yes
zstyle ':omz:plugins:aws' lazy yes

# Individual plugin settings
zstyle ':zephyr:plugin:editor' prepend-sudo yes
zstyle ':zephyr:plugin:editor' magic-enter yes
zstyle ':zephyr:plugin:editor' dot-expansion yes
zstyle ':zephyr:plugin:completion' compstyle zephyr
zstyle ':zephyr:plugin:completion' use-cache yes

# Enable Zephyr XDG Base Directory management
zstyle ':zephyr:plugin:environment' use-xdg-basedirs yes

# Environment variables (migrated from shell/login)
zstyle ':zephyr:plugin:environment' EDITOR 'nvim'
zstyle ':zephyr:plugin:environment' VISUAL 'code'
zstyle ':zephyr:plugin:environment' BROWSER 'firefox'

# Custom PATH additions (Zephyr handles deduplication)
# Scripts now directly executable - no wrappers needed
zstyle ':zephyr:plugin:environment' prepath \
    ~/.local/bin \
    ~/.local/sbin \
    ~/.local/lib/scripts/core \
    ~/.local/lib/scripts/desktop \
    ~/.local/lib/scripts/git \
    ~/.local/lib/scripts/media \
    ~/.local/lib/scripts/network \
    ~/.local/lib/scripts/system \
    ~/.local/lib/scripts/system/package-manager \
    ~/.local/lib/scripts/terminal \
    ~/.local/lib/scripts/user-interface \
    ~/.local/lib/scripts/utils

# Environment customizations (migrated from shell/env)
zstyle ':zephyr:plugin:environment' 'SCRIPTS_DIR' "$HOME/.local/lib/scripts"
zstyle ':zephyr:plugin:environment' 'UI_LIB' "$HOME/.local/lib/scripts/core/gum-ui.sh"
zstyle ':zephyr:plugin:environment' umask 0077
