#!/usr/bin/env zsh

# Source the UI library first
if [ -f "$HOME/.config/shell/gum-ui.sh" ]; then
    . "$HOME/.config/shell/gum-ui.sh"
else
    echo "Error: UI library not found at $HOME/.config/shell/gum-ui.sh" >&2
    return 1
fi

# Source and execute the package manager script
if [ -f "$HOME/.config/scripts/package-manager.sh" ]; then
    . "$HOME/.config/scripts/package-manager.sh"
    package-manager "$@"
else
    echo "Error: package-manager script not found at $HOME/.config/scripts/package-manager.sh" >&2
    return 1
fi