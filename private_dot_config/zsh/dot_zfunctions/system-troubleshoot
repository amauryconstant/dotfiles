#!/usr/bin/env zsh

# Source the UI library first
if [ -f "$HOME/.config/shell/gum-ui.sh" ]; then
    . "$HOME/.config/shell/gum-ui.sh"
else
    echo "Error: UI library not found at $HOME/.config/shell/gum-ui.sh" >&2
    return 1
fi

# Source and execute the troubleshoot script
if [ -f "$HOME/.config/scripts/system/troubleshoot.sh" ]; then
    . "$HOME/.config/scripts/system/troubleshoot.sh"
    system-troubleshoot "$@"
else
    echo "Error: troubleshoot script not found at $HOME/.config/scripts/system/troubleshoot.sh" >&2
    return 1
fi