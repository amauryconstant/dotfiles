@import url("{{ .chezmoi.homeDir }}/.config/themes/current/wofi.css");

/*
 * Custom CSS for Wofi application launcher with dynamic theme support.
 * Colors are imported from the active theme.
 *
 * STRUCTURE:
 * - Universal styles (fonts)
 * - Main window (background, border, rounding)
 * - Input box (search field)
 * - Result containers (layout boxes)
 * - Entry items (application results)
 * - Icons
 *
 * WOFI CSS SELECTORS:
 * - window         : Main launcher window
 * - #input         : Search text field
 * - #inner-box     : Container for results list
 * - #outer-box     : Outermost container
 * - #scroll        : Scrollable area
 * - #entry         : Individual result item
 * - #text          : Application name text
 * - #img           : Application icon
 *
 * CUSTOMIZATION TIPS:
 * - Change border-radius for sharper/rounder corners
 * - Adjust padding for denser/looser spacing
 * - Modify font-size for different readability
 */
/* Universal Styles */
/* -------------------------------------------------------------------------- */
* {
  /* Font: FiraCode Nerd Font for consistent styling with Waybar */
  font-family: "FiraCode Nerd Font", monospace;

  /* Base font size - slightly larger than Waybar for readability */
  font-size: 14px;
}

/* -------------------------------------------------------------------------- */
/* Main Launcher Window */
/* -------------------------------------------------------------------------- */
window {
  /* Remove default margin */
  margin: 0px;

  /* Border: Oksolar blue to match active workspace in waybar */
  border: 2px solid @accent-primary;

  /* Background: Oksolar darkest (base03) - matches waybar background */
  background-color: @bg-primary;

  /* Rounded corners (8px matches Hyprland window rounding) */
  border-radius: 8px;

  /* Optional: Add shadow for depth (uncomment to use) */
  /* box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5); */

  /* Window transparency (95% opacity for readability with compositor blur) */
  opacity: 0.95;
}

/* -------------------------------------------------------------------------- */
/* Search Input Field */
/* -------------------------------------------------------------------------- */
#input {
  /* Inner spacing for comfortable typing */
  padding: 8px;

  /* Margin around input box */
  margin: 12px;

  /* Remove default border (we'll add custom border on focus) */
  border: none;

  /* Text color: Oksolar lightest (base3) - high contrast for search text */
  color: @fg-contrast;

  /* Background: Oksolar dark (base02) - darker than window for distinction */
  background-color: @bg-secondary;

  /* Remove default focus outline (we'll add custom border) */
  outline: none;

  /* Rounded corners for input field */
  border-radius: 4px;
}

/* Search input: Focus state (when typing) */
#input:focus {
  /* Border: Oksolar blue to indicate active input */
  border: 1px solid @accent-primary;

  /* Optional: Add glow effect (uncomment to use) */
  /* box-shadow: 0 0 5px @accent-primary; */
}

/* -------------------------------------------------------------------------- */
/* Result List Containers */
/* -------------------------------------------------------------------------- */

/* Inner box: Container for scrollable results */
#inner-box {
  /* Margin: Space from window edges (left/right/bottom) */
  margin: 12px;
  margin-top: 0px;  /* No top margin (input has its own margin) */

  /* Remove border */
  border: none;

  /* Transparent background (inherits from window) */
  background-color: transparent;
}

/* Outer box: Outermost container */
#outer-box {
  /* No spacing - let inner-box control margins */
  margin: 0px;
  border: none;
  padding: 0px;
}

/* Scroll: Scrollable area for results */
#scroll {
  /* No additional spacing */
  margin: 0px;
  border: none;

  /* Optional: Style scrollbar (uncomment to use) */
  /* scrollbar-width: thin; */
  /* scrollbar-color: @fg-muted @bg-secondary; */
}

/* -------------------------------------------------------------------------- */
/* Application Entry Items */
/* -------------------------------------------------------------------------- */

/* Entry: Individual result item (default/unselected state) */
#entry {
  /* Margin between entries */
  margin: 2px;

  /* Remove border */
  border: none;

  /* Rounded corners for entries */
  border-radius: 4px;

  /* Transparent background when not selected */
  background-color: transparent;

  /* Padding inside entry (around icon and text) */
  padding: 6px;

  /* Optional: Add transition for smooth hover (uncomment to use) */
  /* transition: all 0.2s ease; */
}

/* Entry: Selected/highlighted state */
#entry:selected {
  /* Background: Oksolar blue (matches active workspace) */
  background-color: @accent-primary;

  /* Text color: Oksolar lightest (base3) - high contrast on blue */
  color: @fg-contrast;

  /* Optional: Scale effect on selection (uncomment to use) */
  /* transform: scale(1.02); */
}

/* Optional: Hover state (different from selected) */
/* #entry:hover {
 *   background-color: @bg-secondary;
 * } */

/* -------------------------------------------------------------------------- */
/* Application Text (Names) */
/* -------------------------------------------------------------------------- */

/* Text: Application name (default state) */
#text {
  /* No margin (controlled by parent entry) */
  margin: 0px;
  border: none;

  /* Padding around text */
  padding: 4px;

  /* Text color: Oksolar light text (base1) */
  color: @fg-secondary;
}

/* Text: Selected state */
#text:selected {
  /* Text color: Oksolar lightest (base3) - high contrast */
  color: @fg-contrast;

  /* Font weight: Bold to emphasize selection */
  font-weight: bold;
}

/* -------------------------------------------------------------------------- */
/* Application Icons */
/* -------------------------------------------------------------------------- */
#img {
  /* Margin: Space between icon and text */
  margin-right: 8px;

  /* Transparent background */
  background: transparent;

  /* Optional: Icon opacity (uncomment for dimmed icons) */
  /* opacity: 0.8; */
}

