[core]
    pager = delta
	attributesfile = ~/.config/git/.gitattributes

[user]
	email = {{ .workEmail }}
	name = {{ .fullname }}

[alias]
	# Basics 
	co = checkout
	st = status
	br = branch
	cm = commit

	# Worktree management with standardized paths
	wt-add = "!f() { \
		project=$(basename $(git rev-parse --show-toplevel)); \
		mkdir -p ~/Workspaces/$project; \
		git worktree add ~/Workspaces/$project/$1 $1; \
	}; f"
	wt-list = worktree list
	wt-remove = "!f() { \
		project=$(basename $(git rev-parse --show-toplevel)); \
		git worktree remove ~/Workspaces/$project/$1; \
	}; f"
	wt-prune = worktree prune

[delta]
    navigate = true
	side-by-side = true

[fetch]
	prune = true

[init]
	defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[log]
  	abbrevCommit = true
  	follow = true
  	decorate = false

[merge]
	ff = only
    conflictstyle = zdiff3

[merge "mergiraf"]
    name = mergiraf
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L

[push]
  	default = upstream
  	followTags = true
	autoSetupRemote = true
	
[pull]
	rebase = true
