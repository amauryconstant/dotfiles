target = '{{ .chezmoi.homeDir }}/.config/shell/wallust/colors-shell.sh'

# ============================================================================
# Advanced Options (uncomment to customize)
# ============================================================================

# Check for new images
# check_contrast: Ensure sufficient contrast between fg/bg
check_contrast = true

# Contrast threshold (0.0-21.0, WCAG AAA = 7.0)
# contrast_threshold = 4.5

# Saturation adjustment (-1.0 to 1.0, 0 = no change)
# Slightly increase saturation to make colors more distinct
saturation = 0.15

# Brightness adjustment (-1.0 to 1.0, 0 = no change)
# brightness = 0.0

# Alpha transparency for colors (0-255, 255 = opaque)
# alpha = 255
