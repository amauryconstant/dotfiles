{{ $fullname := promptStringOnce . "fullname" "What is your full name? " -}}
{{ $workEmail := promptStringOnce . "workEmail" "What is your work email address? " -}}
{{ $personalEmail := promptStringOnce . "personalEmail" "What is your personal email address? " -}}
{{ $privateServer := promptStringOnce . "privateServer" "What is the URL of your private server? " -}}
{{ $ovhServerIP := promptStringOnce . "ovhServerIP" "What is the IP v4 of your OVH server? " -}}
{{ $ovhServerPort := promptStringOnce . "ovhServerPort" "What is ssh port of your OVH server? " -}}
{{ $nameDict := splitn " " 2 $fullname }}


{{- $chassisType := (output "hostnamectl" "--json=short" | mustFromJson).Chassis | default "desktop" -}}

{{/* Detect NVIDIA GPU generation for driver selection */}}
{{- $nvidiaDriverType := "modern" -}}
{{- $nvidiaGpuName := "" -}}

{{/* Check for environment variable override first */}}
{{- if env "NVIDIA_DRIVER_OVERRIDE" -}}
{{-   $nvidiaDriverType = env "NVIDIA_DRIVER_OVERRIDE" -}}
{{- else -}}
{{-   $lspciOutput := output "lspci" | lower -}}
{{-   if regexMatch "nvidia.*\\[(gtx|rtx|titan|quadro|tesla|geforce)" $lspciOutput -}}
{{-     if regexMatch "gtx (9[0-9]{2}|10[0-9]{2})|titan (x|xp|z)\\b|quadro (m|p)[0-9]" $lspciOutput -}}
{{-       $nvidiaDriverType = "legacy" -}}
{{-       $nvidiaGpuName = regexFind "nvidia.*\\[.*\\]" $lspciOutput -}}
{{-     end -}}
{{-   end -}}
{{- end -}}


encryption: "age"
age:
    command: "rage"
    identity: "~/.keys/dotfiles-key.txt"
    recipient: "age1qn34rhnnzyav6fe7jk74dyhusl3cjmr3p7e00x99slv0g8gunv3sz4k5re"

edit:
    command: "code"
    args: ["--wait"]

data:
    fullname: {{ $fullname | quote }}
    firstname: {{ $nameDict._0 | quote }}
    workEmail: {{ $workEmail | quote }}
    personalEmail: {{ $personalEmail | quote }}
    privateServer: {{ $privateServer | quote }}
    chassisType: {{ $chassisType | quote }}
    currentDesktop: {{ env "XDG_CURRENT_DESKTOP" | quote }}
    ovhServerIP: {{ $ovhServerIP }}
    ovhServerPort: {{ $ovhServerPort }}
    nvidiaDriverType: {{ $nvidiaDriverType | quote }}
    nvidiaGpuDetected: {{ $nvidiaGpuName | quote }}

diff:
  pager: "delta"
  command: "delta"
  args: ["--paging=never"]

merge:
  command: "mergiraf"
  args:
  - "merge"
  - "-v"
  - {{ printf "%q" "{{ .Source }}" }}
  - {{ printf "%q" "{{ .Destination }}" }}
  - {{ printf "%q" "{{ .Target }}" }}
  - "-o"
  - {{ printf "%q" "{{ .Source }}" }}

hooks:
    read-source-state:
        pre:
            command: ".local/share/chezmoi/.scripts/install-password-manager-and-encryption.sh"
